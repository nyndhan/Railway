# Railway QR Tracker - Production Environment Configuration
# Smart India Hackathon 2025 - Production Deployment

# Project Information
PROJECT_NAME=railway_qr_tracker
PROJECT_VERSION=1.0.0
ENVIRONMENT=production
DEPLOYMENT_DATE=2025-09-05
DEPLOYMENT_REGION=India

# Database Configuration - Production
DB_HOST=railway-db-prod.aws.rds.com
DB_PORT=3306
DB_USER=railway_prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
DB_NAME=railway_qr_tracker_prod
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_IN_PRODUCTION
DB_SSL_ENABLED=true
DB_CONNECTION_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=60000

# Application Ports - Production
BACKEND_PORT=3000
FRONTEND_PORT=80
UDM_API_PORT=4000
TMS_API_PORT=5000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Security Configuration - Production
JWT_SECRET=CHANGE_THIS_TO_STRONG_JWT_SECRET_MINIMUM_32_CHARACTERS
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHARACTER_ENCRYPTION_KEY_FOR_AES
SESSION_SECRET=CHANGE_THIS_TO_STRONG_SESSION_SECRET_KEY
API_KEY_SECRET=CHANGE_THIS_API_KEY_SECRET_FOR_EXTERNAL_INTEGRATIONS

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/railway-qr-tracker.crt
SSL_KEY_PATH=/etc/ssl/private/railway-qr-tracker.key
SSL_CHAIN_PATH=/etc/ssl/certs/railway-qr-tracker-chain.crt
FORCE_HTTPS=true

# API Configuration - Production
API_RATE_LIMIT=2000
API_RATE_LIMIT_WINDOW=15
API_TIMEOUT=60000
API_MAX_PAYLOAD_SIZE=50MB
CORS_ORIGINS=https://railway-tracker.gov.in,https://admin.railway-tracker.gov.in
ENABLE_API_DOCS=false
ENABLE_DEBUG_ENDPOINTS=false

# Caching Configuration
REDIS_HOST=railway-redis-cluster.aws.elasticache.com
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_CLUSTER_PASSWORD
REDIS_TLS_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_MEMORY=2GB

# File Storage - Production
UPLOAD_DIR=/var/railway-qr-tracker/uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx
STORAGE_TYPE=s3
S3_BUCKET=railway-qr-tracker-prod
S3_REGION=ap-south-1
S3_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
S3_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# Logging Configuration - Production
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/railway-qr-tracker/app.log
LOG_ROTATION=daily
LOG_MAX_SIZE=500MB
LOG_MAX_FILES=30
LOG_COMPRESS=true

# Email Configuration - Production
EMAIL_SERVICE=aws-ses
EMAIL_REGION=ap-south-1
EMAIL_ACCESS_KEY_ID=YOUR_AWS_SES_ACCESS_KEY
EMAIL_SECRET_ACCESS_KEY=YOUR_AWS_SES_SECRET_KEY
EMAIL_FROM=Railway QR Tracker <noreply@railway.gov.in>
EMAIL_REPLY_TO=support@railway.gov.in

# SMS Configuration - Production
SMS_PROVIDER=aws-sns
SMS_REGION=ap-south-1
SMS_ACCESS_KEY_ID=YOUR_AWS_SNS_ACCESS_KEY
SMS_SECRET_ACCESS_KEY=YOUR_AWS_SNS_SECRET_KEY
SMS_SENDER_ID=RAILWAY
SMS_RATE_LIMIT=100

# Monitoring Configuration - Production
ENABLE_MONITORING=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30
NEWRELIC_LICENSE_KEY=YOUR_NEWRELIC_LICENSE_KEY
DATADOG_API_KEY=YOUR_DATADOG_API_KEY

# Performance Configuration - Production
NODE_ENV=production
UV_THREADPOOL_SIZE=32
NODE_OPTIONS=--max-old-space-size=8192
CLUSTER_MODE=true
CLUSTER_WORKERS=auto
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Feature Flags - Production
ENABLE_QR_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_COST_OPTIMIZATION=true

# Business Configuration - Production
RAILWAY_ZONES=CR,WR,NR,SR,ER,NFR,NCR,NER,SER,SCR,SWR,ECR,SECR,WCR,NWR,SCR
DEFAULT_COMPONENT_WARRANTY_YEARS=2
CRITICAL_STOCK_PERCENTAGE=5
LOW_STOCK_PERCENTAGE=15
EMERGENCY_RESPONSE_TIME_HOURS=2
MAINTENANCE_WINDOW_START=01:00
MAINTENANCE_WINDOW_END=05:00

# External Integrations - Production
ERP_SYSTEM_URL=https://erp.indianrailways.gov.in/api
ERP_API_KEY=YOUR_ERP_INTEGRATION_API_KEY
PROCUREMENT_SYSTEM_URL=https://procurement.indianrailways.gov.in/api
PROCUREMENT_API_KEY=YOUR_PROCUREMENT_API_KEY
QUALITY_SYSTEM_URL=https://quality.indianrailways.gov.in/api
QUALITY_API_KEY=YOUR_QUALITY_API_KEY

# Backup Configuration - Production
ENABLE_AUTOMATIC_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=railway-qr-tracker-backups
BACKUP_ENCRYPTION_ENABLED=true

# Load Balancing - Production
LOAD_BALANCER_TYPE=application
ENABLE_STICKY_SESSIONS=false
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60
UNHEALTHY_THRESHOLD=3

# Auto Scaling - Production
MIN_INSTANCES=2
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# Security Headers - Production
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000
ENABLE_CSP=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true
ENABLE_FRAME_DENY=true

# Compliance Configuration - Production
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_YEARS=7
GDPR_COMPLIANCE_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
PII_DETECTION_ENABLED=true

# Disaster Recovery - Production
DR_ENABLED=true
DR_REGION=ap-southeast-1
RTO_MINUTES=60
RPO_MINUTES=15
CROSS_REGION_REPLICATION=true

# Cost Optimization - Production
ENABLE_COST_MONITORING=true
COST_ALERT_THRESHOLD_MONTHLY=100000
RESOURCE_TAGGING_ENABLED=true
ENVIRONMENT_TAG=production
PROJECT_TAG=railway-qr-tracker
COST_CENTER_TAG=indian-railways-digitization

# Development Flags - Disabled in Production
ENABLE_DEBUG=false
ENABLE_MOCK_DATA=false
SIMULATE_DELAYS=false
ENABLE_TEST_ENDPOINTS=false
BYPASS_AUTHENTICATION=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is temporarily unavailable for maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,10.0.0.0/8

# Analytics and Reporting - Production
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID_FOR_RAILWAY_TRACKER
MIXPANEL_TOKEN=MIXPANEL_TOKEN_FOR_ANALYTICS
ENABLE_USAGE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=730

# Third Party Integrations
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_FOR_ALERTS
MICROSOFT_TEAMS_WEBHOOK=YOUR_TEAMS_WEBHOOK_FOR_NOTIFICATIONS

# Time Zone and Localization
DEFAULT_TIMEZONE=Asia/Kolkata
SUPPORTED_LANGUAGES=en,hi,te,ta,bn,gu,kn,ml,mr,or
DEFAULT_LANGUAGE=en
CURRENCY=INR
DATE_FORMAT=DD/MM/YYYY

# API Versioning
API_VERSION=v1
API_DEPRECATION_NOTICE_DAYS=90
MAINTAIN_BACKWARD_COMPATIBILITY=true

# Quality Assurance
ENABLE_SYNTHETIC_MONITORING=true
SYNTHETIC_TEST_FREQUENCY=300
ERROR_TRACKING_SERVICE=sentry
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING

# Container Configuration
DOCKER_REGISTRY=your-registry.com/railway-qr-tracker
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1000m
RESTART_POLICY=unless-stopped

# Network Configuration
NETWORK_MODE=bridge
DNS_SERVERS=8.8.8.8,8.8.4.4
ENABLE_IPV6=false

# Production Validation
REQUIRE_ENVIRONMENT_VALIDATION=true
MINIMUM_TLS_VERSION=1.2
SECURITY_SCAN_ENABLED=true
VULNERABILITY_SCAN_ENABLED=true
