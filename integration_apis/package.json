{
  "name": "railway-qr-tracker-integration-apis",
  "version": "1.0.0",
  "description": "Mock Integration APIs for Railway QR Tracker - Smart India Hackathon 2025",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:udm\" \"npm run start:tms\"",
    "start:udm": "node udm_api_server.js",
    "start:tms": "node tms_api_server.js",
    "dev": "concurrently \"nodemon udm_api_server.js\" \"nodemon tms_api_server.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:udm": "jest udm_api_server.test.js",
    "test:tms": "jest tms_api_server.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm install && npm run setup:env",
    "setup:env": "cp .env.example .env || echo 'Please configure .env file'",
    "docker:build": "docker build -t railway-integration-apis .",
    "docker:run": "docker run -p 4000:4000 -p 5000:5000 railway-integration-apis"
  },
  "keywords": [
    "railway",
    "integration",
    "api",
    "udm",
    "tms",
    "indian-railways",
    "smart-india-hackathon",
    "mock-api",
    "microservices"
  ],
  "author": "Railway QR Tracker Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/railway-qr-tracker/integration-apis.git"
  },
  "bugs": {
    "url": "https://github.com/railway-qr-tracker/integration-apis/issues"
  },
  "homepage": "https://github.com/railway-qr-tracker/integration-apis#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testTimeout": 10000
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  }
}
